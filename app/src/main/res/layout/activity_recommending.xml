                    android:text="ThemePark"
                    app:layout_constraintStart_toEndOf="@+id/theaterCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/religiousCheckBox" />

                <CheckBox
                    android:id="@+id/beachCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Beach"
                    app:layout_constraintStart_toEndOf="@+id/architecturalCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/typeOfActivityTextView" />


            </android.support.constraint.ConstraintLayout>



            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
