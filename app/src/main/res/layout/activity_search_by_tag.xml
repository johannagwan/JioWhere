<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".SearchByTagActivity">

    <Button
        android:id="@+id/searchByTagButton"
        android:background="@drawable/custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:text="SEARCH"
        android:textColor="#42210B"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/partnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Who do you want to go out with?"
        android:textColor="#42210B"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/indoorOrOutdoorextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Indoor or Outdoor?"
        android:textColor="#42210B"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/family"
        android:textColor="#A642210B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partnerTextView" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/friends"
        android:textColor="#A642210B"
        app:layout_constraintStart_toEndOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/partnerTextView" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Lover"
        android:textColor="#A642210B"
        app:layout_constraintStart_toEndOf="@+id/checkBox2"
        app:layout_constraintTop_toBottomOf="@+id/partnerTextView" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Solo"
        android:textColor="#A642210B"
        app:layout_constraintStart_toEndOf="@+id/checkBox3"
        app:layout_constraintTop_toBottomOf="@+id/partnerTextView" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Indoor"
        android:textColor="#A642210B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indoorOrOutdoorextView" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Outdoor"
        android:textColor="#A642210B"
        app:layout_constraintStart_toEndOf="@+id/checkBox5"
        app:layout_constraintTop_toBottomOf="@+id/indoorOrOutdoorextView" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox5">

        <TextView
            android:id="@+id/typeOfActivityTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/montserrat"
            android:text="Types of Activity/Events"
            android:textColor="#42210B"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <CheckBox
            android:id="@+id/romanceCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Romance"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/religiousCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/monumentCheckBox1" />

        <CheckBox
            android:id="@+id/culinaryCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Culinary"
            android:textColor="#A642210B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/architecturalCheckBox1" />

        <CheckBox
            android:id="@+id/natureCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Nature"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/museumCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/culinaryCheckBox1" />

        <CheckBox
            android:id="@+id/gamesCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Games"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/culturalCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/architecturalCheckBox1" />

        <CheckBox
            android:id="@+id/culturalCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Cultural"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/culinaryCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/architecturalCheckBox1" />

        <CheckBox
            android:id="@+id/museumCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Museum"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/monumentCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/culinaryCheckBox1" />

        <CheckBox
            android:id="@+id/parkCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Park"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/natureCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/culinaryCheckBox1" />

        <CheckBox
            android:id="@+id/shoppingCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Shopping"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/romanceCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/monumentCheckBox1" />

        <CheckBox
            android:id="@+id/theaterCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Theater"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/sportsCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/religiousCheckBox1" />

        <CheckBox
            android:id="@+id/sportsCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Sports"
            android:textColor="#A642210B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/religiousCheckBox1"
            app:layout_constraintVertical_bias="0.0" />

        <CheckBox
            android:id="@+id/concertCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Concert"
            android:textColor="#A642210B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/bikingCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/typeOfActivityTextView1" />

        <CheckBox
            android:id="@+id/historicCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Historic"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/gamesCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/architecturalCheckBox1" />

        <CheckBox
            android:id="@+id/sightseeingCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Sightseeing"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/shoppingCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/monumentCheckBox1" />

        <CheckBox
            android:id="@+id/bikingCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Biking"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/beachCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/typeOfActivityTextView1" />

        <CheckBox
            android:id="@+id/zooCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Zoo"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/themeparkCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/religiousCheckBox1" />

        <CheckBox
            android:id="@+id/architecturalCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Architectural"
            android:textColor="#A642210B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typeOfActivityTextView1" />

        <CheckBox
            android:id="@+id/monumentCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat"
            android:text="Monument"
            android:textColor="#A642210B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/culinaryCheckBox1"
            app:layout_constraintVertical_bias="0.0" />

        <CheckBox
            android:id="@+id/religiousCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Religious"
            android:textColor="#A642210B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monumentCheckBox1" />

        <CheckBox
            android:id="@+id/themeparkCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="ThemePark"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/theaterCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/religiousCheckBox1" />

        <CheckBox
            android:id="@+id/beachCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Beach"
            android:textColor="#A642210B"
            app:layout_constraintStart_toEndOf="@+id/architecturalCheckBox1"
            app:layout_constraintTop_toBottomOf="@+id/typeOfActivityTextView1" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
