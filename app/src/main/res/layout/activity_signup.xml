<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".SignUpActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/transjiowhere" />


        <TextView
            android:id="@+id/textViewUserRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat"
            android:text="User Registration"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#42210B"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailResetPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Email address"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Password"
            android:inputType="textPassword" />


        <EditText
            android:id="@+id/editTextDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Display Name "
            android:inputType="text" />

        <Button
            android:id="@+id/resetPwButton"
            android:background="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/montserrat"
            android:text="Register User"
            android:textColor="#42210B"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SignInText"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:clickable="true"
            android:fontFamily="@font/montserrat"
            android:text="Already Registered? Sign in here"
            android:textAlignment="center"
            android:textColor="#42210B"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resetPasswordSignup"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:clickable="true"
            android:fontFamily="@font/montserrat"
            android:text="Forgot password? Reset here"
            android:textAlignment="center"
            android:textColor="#42210B"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>